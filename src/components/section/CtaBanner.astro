---
const { title, description, button } = Astro.props;
---

<section class="py-16">
  <div class="container mx-auto px-4 sm:px-6">
    <div
      class="bg-primary flex flex-col items-center justify-between rounded-2xl p-10 lg:flex-row lg:px-16 lg:py-14"
    >
      <div class="mb-5 block text-center lg:mb-0 lg:text-left">
        <h2 class="font-manrope mb-5 text-4xl font-semibold text-white lg:mb-2">
          {title}
        </h2>
        <p class="text-base text-indigo-100">
          {description}
        </p>
      </div>
      <a
        href={button?.link || "#"}
        class="bg-secondary flex items-center gap-2 rounded-full px-8 py-4 text-lg font-semibold text-white shadow-sm transition-all duration-500"
      >
        {button?.label || "Get In Touch"}
        <svg
          width="19"
          height="14"
          viewBox="0 0 19 14"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M1.75 7L16.4167 7M11.8333 12.5L16.6852 7.64818C16.9907 7.34263 17.1435 7.18985 17.1435 7C17.1435 6.81015 16.9907 6.65737 16.6852 6.35182L11.8333 1.5"
            stroke="#fff"
            stroke-width="2.4"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
