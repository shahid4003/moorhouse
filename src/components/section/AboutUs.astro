---
interface Feature {
  icon: string;
  title: string;
  text: string;
}

export interface Props {
  title: string;
  description: string;
  features: Feature[];
  image: string;
}

const { title, description, features, image } = Astro.props;
---

<section class="bg-white py-20">
  <div class="2 mx-auto grid max-w-7xl items-center px-6 md:grid-cols-2">
    <!-- Left -->
    <div>
      <h2 class="mb-4 text-4xl font-semibold text-indigo-900">{title}</h2>
      <p class="mb-10 text-gray-700">{description}</p>

      <div class="grid gap-6 rounded-xl bg-indigo-50 p-6 sm:grid-cols-2">
        {
          features.map(feature => (
            <div class="flex items-start gap-4">
              <div class="rounded-full bg-indigo-500  text-white">
                <img src={feature.icon} alt={feature.title} class="h-5 w-5" />
              </div>
              <div>
                <h4 class="font-medium text-indigo-900">{feature.title}</h4>
                <p class="text-sm text-gray-600">{feature.text}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Right -->
    <div class="w-full">
      <img src={image} alt={""} class="rounded-xl shadow-md" />
    </div>
  </div>
</section>
