---
const { heading, description, primaryButton, bgImage = "" } = Astro.props;
---

<div
  class="relative isolate overflow-hidden bg-gray-900"
  style={bgImage
    ? `background-image: url('${bgImage}'); background-size: cover; background-position: center;`
    : ""}
>
  <div class="absolute inset-0 bg-[#1D1B37]/70"></div>
  <div class="relative px-6 py-24 sm:px-6 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2
        class="text-balance text-4xl font-semibold tracking-tight text-white sm:text-5xl"
      >
        {heading}
      </h2>
      <p class="mx-auto mt-6 max-w-xl text-pretty text-lg/8 text-gray-300">
        {description}
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href={primaryButton.url}
          class="inset-ring inset-ring-white/5 rounded-md bg-white/15 px-3.5 py-2.5 text-sm font-semibold text-white hover:bg-white/20 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
        >
          {primaryButton.label}
        </a>
      </div>
    </div>
  </div>
</div>
