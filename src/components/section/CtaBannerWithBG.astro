---
const { title, description, button, icon = "" } = Astro.props;
---

<div
  class="bg-gradient relative isolate overflow-hidden bg-gray-900"
  style={icon
    ? `background-image: url('${icon}'); background-size: cover; background-position: center; background-attachment: fixed;`
    : ""}
>
  <div class="relative px-6 py-24 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2
        class="text-balance text-4xl font-semibold tracking-tight text-white sm:text-5xl"
      >
        {title}
      </h2>
      <p class="mx-auto mt-6 max-w-xl text-pretty text-lg/8 text-gray-300">
        {description}
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href={button.link}
          class="inset-ring inset-ring-white/5 bg-secondary rounded-md px-3.5 py-2.5 text-sm font-semibold text-white focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
        >
          {button.label}
        </a>
      </div>
    </div>
  </div>
</div>
