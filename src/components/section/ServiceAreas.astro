---
export interface Stat {
  value: string;
  label: string;
}

export interface Location {
  name: string;
  address: string;
  phone: string;
  email: string;
  mapSrc: string;
}

export interface LocationsSectionProps {
  title: string;
  description: string;
  stats: Stat[];
  locations: Location[];
}

const { title, description, stats, locations } = Astro.props;
---

<section class="mx-auto max-w-7xl px-4 py-16">
  <div class="mb-10 text-center">
    <h2 class="text-3xl font-bold leading-snug text-gray-900">{title}</h2>
    <p class="mx-auto mt-4 max-w-3xl text-gray-600">{description}</p>
  </div>

  <div class="mb-12 grid grid-cols-1 gap-4 text-center sm:grid-cols-3">
    {
      stats.map((stat: Stat) => (
        <div class="rounded-xl bg-purple-50 p-6">
          <p class="text-3xl font-bold text-purple-700">{stat.value}</p>
          <p class="mt-2 text-gray-700">{stat.label}</p>
        </div>
      ))
    }
  </div>

  <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
    {
      locations.map((loc: Location) => (
        <div class="flex overflow-hidden rounded-xl border border-dashed border-purple-200 shadow-sm transition hover:shadow-md">
          <div class="w-1/2">
            <iframe
              src={loc.mapSrc}
              class="h-full w-full"
              loading="lazy"
              allowfullscreen
            />
          </div>

          <div class="flex w-1/2 flex-col justify-between p-4">
            <h3 class="text-lg font-semibold text-gray-900">{loc.name}</h3>
            <p class="text-sm text-gray-600">{loc.address}</p>

            <div class="mt-4 space-y-2 text-sm">
              <p class="flex items-center gap-2 text-gray-700">
                <span class="text-green-500">üìû</span> {loc.phone}
              </p>
              <p class="flex items-center gap-2 text-gray-700">
                <span class="text-green-500">‚úâÔ∏è</span> {loc.email}
              </p>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
