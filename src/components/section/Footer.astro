---
import { getEntry } from "astro:content";
const footer = await getEntry("singletons", "footer");
---

<footer class="bg-neutral-950 text-neutral-200">
  <div class="container mx-auto px-6 py-16 sm:py-20 lg:px-8">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      {/* Brand/Info Column */}
      <div class="space-y-6">
        {
          footer?.data?.leftColumn?.logo && (
            <img
              src={footer.data.leftColumn.logo}
              alt="Logo"
              class="h-10 w-auto"
              loading="lazy"
            />
          )
        }
        <h2 class="text-lg font-semibold text-white">
          {footer?.data?.leftColumn?.name}
        </h2>
        <p class="text-sm leading-6 text-neutral-400">
          {footer?.data?.leftColumn?.services}
        </p>

        <address class="text-sm not-italic leading-6 text-neutral-400">
          {footer?.data?.leftColumn?.address}
        </address>

        <div class="space-y-2">
          <p class="flex items-center gap-2 text-sm text-neutral-400">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="h-5 w-5 text-neutral-500"
            >
              <path
                d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z"
              ></path>
              <path
                d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z"
              ></path>
            </svg>
            <a
              href={`mailto:${footer?.data?.leftColumn?.email}`}
              class="transition-colors hover:text-white"
            >
              {footer?.data?.leftColumn?.email}
            </a>
          </p>
          <p class="flex items-center gap-2 text-sm text-neutral-400">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="h-5 w-5 text-neutral-500"
            >
              <path
                fill-rule="evenodd"
                d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 01-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 006.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 011.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 01-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5z"
                clip-rule="evenodd"></path>
            </svg>
            {footer?.data?.leftColumn?.phone}
          </p>
        </div>
      </div>

      {/* Navigation Links */}
      <div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <h3 class="text-sm font-semibold leading-6 text-white">
              {footer?.data?.rightColumn?.groupTitle}
            </h3>
            <ul class="mt-6 space-y-4">
              {
                footer?.data?.rightColumn?.map((item: any) => (
                  <li>
                    <a
                      href={getRelativeLocaleUrl(currentLocale, item.link)}
                      class="text-sm leading-6 text-neutral-400 transition-colors hover:text-white"
                    >
                      {item.label}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </div>

    {/* Bottom Bar */}
    <div class="mt-16 border-t border-white/10 pt-8 sm:mt-20 lg:mt-24">
      <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
        <p class="text-xs leading-5 text-neutral-500">
          &copy; {new Date().getFullYear()}
          {footer?.data?.copyright || "All rights reserved."}
        </p>

        {/* Social Links */}
        {
          footer?.data?.socialLinks && (
            <div class="flex gap-6">
              {footer.data.socialLinks.map((social: any) => (
                <a
                  href={social.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-neutral-500 transition-colors hover:text-white"
                >
                  <span class="sr-only">{social.name}</span>
                  <svg
                    class="h-6 w-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <use href={`/icons/social-icons.svg#${social.icon}`} />
                  </svg>
                </a>
              ))}
            </div>
          )
        }
      </div>
    </div>
  </div>
</footer>
