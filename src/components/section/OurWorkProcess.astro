---
import Divider from "@components/ui/Divider.astro";

const { heading, description, cards = [] } = Astro.props;
---

<section class="py-12">
  <div class="mx-auto mb-10 max-w-3xl text-center">
    <h2 class="text-primary mb-4 text-3xl font-bold">{heading}</h2>
    <p class="text-gray-600">{description}</p>
    <Divider />
  </div>
  <div
    class="mx-auto grid max-w-5xl grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-4"
  >
    {
      cards.map((card: any, index: number) => (
        <div class="border-primary/40 flex min-h-[200px] flex-col items-center rounded-lg border-2 border-dashed bg-white p-8 text-center shadow transition hover:shadow-lg">
          <div class="bg-primary/10 mb-4 flex h-16 w-16  items-center justify-center rounded-full p-1">
            {card.icon && (
              <img src={card.icon} class="h-10 w-10 object-contain" alt="" />
            )}
          </div>
          <span class="text-secondary mb-2 mt-2 text-xs font-semibold uppercase tracking-wider">
            STEP {index + 1}
          </span>
          <h3 class="text-lg font-semibold text-gray-800">{card.title}</h3>
        </div>
      ))
    }
  </div>
</section>
