---
const { heading, description, cards = [] } = Astro.props;
---

<section class="py-12">
  <div class="mx-auto mb-10 max-w-3xl text-center">
    <h2 class="mb-4 text-3xl font-bold">{heading}</h2>
    <p class="text-gray-600">{description}</p>
  </div>
  <div
    class="md:grid-cols-4 mx-auto grid max-w-5xl grid-cols-1 gap-6 sm:grid-cols-2"
  >
    {
      cards.map((card, index) => (
        <div
          class="flex flex-col items-center rounded-lg bg-white p-6 text-center shadow"
          style="min-height:180px;"
        >
          <div class="mb-3 text-4xl">{card.icon}</div>
          <span>STEP {index + 1}</span>
          <h3 class="text-lg font-semibold">{card.title}</h3>
        </div>
      ))
    }
  </div>
</section>
