---
const { purple = false } = Astro.props;
const borderColor = purple ? "#645EA7" : "#DDDBF2";
---

<div class="flex w-full items-center py-4">
  <span
    class={`flex-grow border-t border-dashed`}
    style={`border-color: ${borderColor};`}></span>

  <div class="mx-6 text-xl" style={`color: ${borderColor};`}>
    <svg
      fill="#000000"
      width="24px"
      height="24px"
      viewBox="0 0 24 24"
      id="paint-roller-2"
      data-name="Flat Color"
      xmlns="http://www.w3.org/2000/svg"
      class="icon flat-color"
    >
      <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
      <g
        id="SVGRepo_tracerCarrier"
        stroke-linecap="round"
        stroke-linejoin="round"></g>
      <g id="SVGRepo_iconCarrier">
        <path
          id="secondary"
          d="M11,15a1,1,0,0,0,1-1V11.91l8.2-.83a2,2,0,0,0,1.8-2V6a2,2,0,0,0-2-2H18a1,1,0,0,0,0,2h2V9.09l-8.2.83a2,2,0,0,0-1.8,2V14A1,1,0,0,0,11,15Z"
          style="fill: #96DAC8;"></path>
        <path
          id="primary"
          d="M2,4V6A2,2,0,0,0,4,8H17a2,2,0,0,0,2-2V4a2,2,0,0,0-2-2H4A2,2,0,0,0,2,4Zm9,9h0a2,2,0,0,1,2,2v6a1,1,0,0,1-1,1H10a1,1,0,0,1-1-1V15A2,2,0,0,1,11,13Z"
          style="fill: #96DAC8;"></path>
      </g>
    </svg>
  </div>

  <span
    class={`flex-grow border-t border-dashed`}
    style={`border-color: ${borderColor};`}></span>
</div>
